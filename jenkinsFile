pipeline{
    agent any
    stages{
        stage('Git merge'){
            steps{
                sh 'git fetch --all' 
                sh 'git checkout main'
                sh 'git pull'
                sh 'git merge origin/${GIT_BRANCH}'
            }
        } 

        stage('Build'){
            steps{
                echo 'Build steps ....' 
            }
        }

        stage('Test'){
            steps{
                echo 'Test steps ....' 
            }
        }

        stage('Deliver'){
            steps{
                echo 'Deliver steps ....' 
            }
        }
    }
}